in: pos
in: vel
in: Ap
in: Pe
in: θ
in: ω
in: Ω
in: i
out: pos
out: vel

pos = dot(pos, dot(dot(rotZ(ω), rotX(i)), rotZ(Ω)))
vel = dot(vel, dot(dot(rotZ(ω), rotX(i)), rotZ(Ω)))

# Final conversion to craft coordinates
ecc = eccentricity(Ap, Pe)
φ = atan( (ecc * sin θ) / (1 + ecc * cos θ) )
vel = dot(vel, rotZ(θ + pi/2 - φ))
